<% include ../partials/header %>

<% include ../partials/leftColumn %>
        
<div class="col-6 columns">
    <div class="card card-center shadow">
        <!--Search bar for friends list-->
        <div class="card-header card-post">
            <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" 
            placeholder="Search friends list...">
        </div>
    </div>
    <div class="card card-center shadow">
        <div class="card-body">
            <% if(!currentUser){ %>
                <h4><%= user.firstName %>'s Friends</h4>
            <% } else { %>
                <h4>Your Friends</h4>
            <% } %>
            <hr>
            <!--User's friends list-->
            <% user.friends.forEach(function(friend){ %>
                <div class="card card-center">
                    <div class="card-body">
                        <h5 class="card-title"><%= friend.firstName %> <%= friend.lastName %></h5>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ../partials/rightColumn %>

<% include ../partials/jQuery %>

<% include ../partials/footer %>

