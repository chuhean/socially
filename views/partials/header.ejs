<!DOCTYPE html>
<html>
    <!-- HTML Header -->
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Socially</title>
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
        <link rel="icon" href="/favicon.ico?" type="image/icon">
        <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    </head>
    
    <!-- HTML Body -->
    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
            <a class="navbar-brand" href="/">
                <img src="https://image.ibb.co/bCT3xc/Untitled.png" width="86" height="30" class="d-inline-block align-top" alt="Socially Logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                
                <!--Navbar menu-->
                <% if(!currentUser){ %>
                
                <% } else { %>
                    <ul class="navbar-nav">
                        <li class="nav-item <%= typeof page !== 'undefined' && page === 'main/home' ? 'active' : '' %>">
                            <a class="nav-link" href="/main/home"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item <%= typeof page !== 'undefined' && page === 'main/messages' ? 'active' : '' %>">
                            <a class="nav-link" href="/main/messages"><i class="fas fa-comments"></i> Messages</a>
                        </li>
                        <li class="nav-item <%= typeof page !== 'undefined' && page === 'main/notifications' ? 'active' : '' %>">
                            <a class="nav-link" href="/main/notifications"><i class="fas fa-bell"></i> Notifications</a>
                        </li>
                    </ul>
                    <!--Search bar-->
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" name="search" id="search" placeholder="Search..." aria-label="Search">
                        <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
                        <!--Search Result-->
                        <!--<div class="searchBar">-->
                        <!--    <div class="border" id="searchResult">-->
                        <!--    </div>-->
                        <!--</div>-->
                    </form> 
                    
                <% } %>
            
                <ul class="navbar-nav ml-auto">
                    
                    <!--Sign up/login menu-->
                    <% if(!currentUser){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup"><i class="fas fa-user-plus"></i> Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                        </li>
                    <% } else { %>
                        <!--Signed in dropdown menu-->
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <%= currentUser.firstName %>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                              <a class="dropdown-item" href="/profile/<%= currentUser._id %>">My Profile</a>
                              <a class="dropdown-item" href="/profile/<%= currentUser._id %>/friendslist">Friends List</a>
                              <a class="dropdown-item" href="/settings">Settings</a>
                              <div class="dropdown-divider"></div>
                              <a class="dropdown-item" href="/logout">Logout</a>
                            </div>
                        </li>
                    <% } %>
                    
                </ul>
                
            </div>
        </nav>
        